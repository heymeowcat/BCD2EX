<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>employee.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employees</servlet-name>
        <servlet-class>employee.employees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profilefullview</servlet-name>
        <servlet-class>employee.profilefullview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewEmployee</servlet-name>
        <servlet-class>employee.addNewEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userroles</servlet-name>
        <servlet-class>employee.userroles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>genders</servlet-name>
        <servlet-class>employee.genders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchEmployees</servlet-name>
        <servlet-class>employee.searchEmployees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendance</servlet-name>
        <servlet-class>time.attendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCurrentDatetime</servlet-name>
        <servlet-class>time.getCurrentDatetime</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clockInOut</servlet-name>
        <servlet-class>time.clockInOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employees</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profilefullview</servlet-name>
        <url-pattern>/profilefullview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewEmployee</servlet-name>
        <url-pattern>/addNewEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userroles</servlet-name>
        <url-pattern>/userroles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>genders</servlet-name>
        <url-pattern>/genders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchEmployees</servlet-name>
        <url-pattern>/searchEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendance</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCurrentDatetime</servlet-name>
        <url-pattern>/getCurrentDatetime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clockInOut</servlet-name>
        <url-pattern>/clockInOut</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
